@page "/"

<BlazorStrap.BSCarousel NumberOfItems="@items.Count" Fade="true" style="width:100%;">
    <BlazorStrap.BSCarouselIndicators NumberOfItems="@items.Count" />
    <div class="carousel-inner">
        @for (int i = 0; i < items.Count; i++)
        {
            Item item = items[i];
            <BlazorStrap.BSCarouselItem src="@item.Source" alt="@item.Alt" ActionLink="@items[i].ActionLink" ActionLinkTarget="@items[i].ActionLinkTarget" style="width:100%; height:500px;/*For Hero picture Sizing*/">

                <BlazorStrap.BSCarouselCaption style="color:red; font-family:'Bell MT'; font-size:20px;" HeaderText="@item.Header" />
                <!--<BlazorStrap.BSCarouselCaption CaptionText="@item.Caption" style="color:yellow"/>-->

            </BlazorStrap.BSCarouselItem>

        }
    </div>
    <BlazorStrap.BSCarouselControl CarouselDirection="BlazorStrap.CarouselDirection.Previous" NumberOfItems="@items.Count" />
    <BlazorStrap.BSCarouselControl CarouselDirection="BlazorStrap.CarouselDirection.Next" NumberOfItems="@items.Count" />
</BlazorStrap.BSCarousel>
